<h1>Eat-Da-Burger!</h1>


<div id="notDevoured">
  <h2>Burgers Yet to be Devoured!</h2>

  <ol>
    {{#each burgers}}
      {{#unless devoured}}
        <li>
          {{burger_name}}
          <button class="change-devoured" data-id="{{id}}" data-newDevoured="{{devoured}}">
            EAT ME!!
          </button>
        </li>
      {{/unless}}
    {{/each}}
  </ol>
</div>

<div id="devoured">
  <h2>Devoured Burgers!</h2>

  <ol>
    {{#each burgers}}
      {{#if devoured}}
        <li>
          {{burger_name}}
        </li>
      {{/if}}
    {{/each}}
  </ol>
</div>

<div id="add">
  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="name">
    </div>

    <button type="submit">Add Burger</button>
  </form>
</div>
